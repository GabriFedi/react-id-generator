{
  "name": "react-id-generator",
  "version": "1.0.0",
  "description": "Simple and universal HTML-id generator for React.",
  "repository": "https://github.com/Tomekmularczyk/react-id-generator.git",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "types": "./lib/index.d.ts",
  "scripts": {
    "dev": "rollup -c --watch | yarn build:declarations --watch",
    "build": "NODE_ENV=production rollup -c",
    "build:declarations": "tsc --declaration --emitDeclarationOnly --declarationDir lib",
    "lint": "eslint --ext .ts,.tsx .",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "keywords": [
    "id",
    "react",
    "react-id",
    "id-generator"
  ],
  "author": "Tomasz Mularczyk",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-react": "^7.0.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.1.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rollup": "^1.16.6",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "typescript": "^3.5.2"
  },
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
